keystone_service_adminuri_insecure: true
keystone_service_internaluri_insecure: true
haproxy_ssl_self_signed_subject: "/C=US/ST=GA/L=Atlanta/O=IT/CN=haproxy.kubelab.com"
horizon_ssl_self_signed_regen: true
swift_ceilometer_enabled: True
heat_ceilometer_enabled: True
cinder_ceilometer_enabled: True
glance_ceilometer_enabled: True
nova_ceilometer_enabled: True
neutron_ceilometer_enabled: True
keystone_ceilometer_enabled: True
glance_default_store: file
dhcp_domain: kubelab.com
haproxy_keepalived_external_vip_cidr: "{{external_lb_vip_address}}/{{external_lb_vip_submask}}"
haproxy_keepalived_internal_vip_cidr: "{{internal_lb_vip_address}}/{{internal_lb_vip_submask}}"
haproxy_keepalived_external_interface: {{haproxy_keepalived_external_interface}}
haproxy_keepalived_internal_interface: {{haproxy_keepalived_internal_interface}}
haproxy_keepalived_external_virtual_router_id: {{haproxy_keepalived_external_virtual_router_id}}
apply_security_hardening: true
neutron_plugin_base:
  - router
  - metering
  - neutron_lbaas.services.loadbalancer.plugin.LoadBalancerPluginv2
